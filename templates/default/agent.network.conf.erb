type: agent.network
label: Network check on <%= @target %>
disabled: <%= @disabled %>
period: <%= @period %>
timeout: <%= @timeout %>
details:
  target: <%= @target %>
<% if @alarm == true %>
alarms:
    alarm-network-receive:
        label: Network receive rate on <%= @target %>
        notification_plan_id: <%= @notification_plan_id %>
        criteria: |
          <%= @alarm_criteria['recv'] %>
    alarm-network-transmit:
        label: Network transmit rate on <%= @target %>
        notification_plan_id: <%= @notification_plan_id %>
        criteria: |
          <%= @alarm_criteria['send'] %>
<% end %>

